<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--Title,previous years -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">


                    <!--Old Cardview for item holding -->
                    <android.support.v7.widget.CardView
                        android:id="@+id/fragmentAptitudeQuiz_MainItemHolder_Cardview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="6dp">


                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Question"
                            android:textAlignment="center"
                            android:textColor="@color/colorLightWhiteBg" />

                        <TextView
                            android:id="@+id/fragmentAptitudeQuiz_QuestionName_Textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra=".9sp"
                            android:text="Title"
                            android:textColor="@color/colorMainText"
                            android:textIsSelectable="true"
                            android:textSize="16sp"
                            android:textStyle="normal" />


                        <!--Previous year textview -->
                        <TextView
                            android:id="@+id/fragmentAptitudeQuiz_previousYearName_Textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:text=" Previous Year Name"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorLightWhiteBg"
                            android:textSize="12sp"
                            android:visibility="visible" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>

            <!--Options cardview -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:id="@+id/fragmentAptitudeQuiz_optionA_Cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="@color/colorWhiteBg">

                    <TextView
                        android:id="@+id/fragmentAptitudeQuiz_optionA_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="16dp"
                        android:text="Option A"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/fragmentAptitudeQuiz_optionB_Cardview"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="@color/colorWhiteBg">

                    <TextView
                        android:id="@+id/fragmentAptitudeQuiz_optionB_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="16dp"
                        android:text="Option B"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="normal"

                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/fragmentAptitudeQuiz_optionC_Cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    android:textAlignment="center"

                    app:cardBackgroundColor="@color/colorWhiteBg">

                    <TextView
                        android:id="@+id/fragmentAptitudeQuiz_optionC_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="16dp"
                        android:text="Option C"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="normal"

                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/fragmentAptitudeQuiz_optionD_Cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="@color/colorWhiteBg">

                    <TextView
                        android:id="@+id/fragmentAptitudeQuiz_optionD_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="16dp"
                        android:text="Option D"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="normal"

                        />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/question_explaination_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="2sp"
                android:text=""
                android:textColor="@color/colorMainText"
                android:textIsSelectable="true"
                android:textSize="16sp"
                android:textStyle="normal"
                android:visibility="visible" />
        </LinearLayout>

    </ScrollView>
</android.support.design.widget.CoordinatorLayout>